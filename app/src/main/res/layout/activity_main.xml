<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tvSelamatDatang"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang!"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBLK"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/tvSelamatDatang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoKemnaker"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/logo_kemnaker"/>

                <ImageView
                    android:id="@+id/logoPemkot"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo_indramayu"/>

                <ImageView
                    android:id="@+id/logoBlk"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/logo_blkindramayu"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvUptd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="UPTD-BALAI LATIHAN KERJA (BLK)"
                android:textColor="@color/colorLightBlue"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvDinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Dinas Tenaga Kerja Kabupaten Indramayu"
                android:textColor="@color/colorLightBlue"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/cvBLK">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/pb"
            style="@style/SpinKitView.Small.Wave"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorWhite" />

        <TextView
            android:id="@+id/tvMenunggu"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="menunggu..."
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>


